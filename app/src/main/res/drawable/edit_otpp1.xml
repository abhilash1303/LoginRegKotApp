<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#e5eaff"
                />

            <gradient
                android:angle="0"
                android:centerColor="#1F2A37"
                android:endColor="#C9DFE1"
                android:startColor="#1F2A37"

                />


            <stroke
                android:width="1dp"
                android:color="#1F2A37"

                />
        </shape>


    </item>

    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#fff" />
        </shape>



    </item>

</layer-list>

