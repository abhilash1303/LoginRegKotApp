    <style name="Theme.Nationlearns" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/AppYellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/bg_screen6</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemee.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomChipstyle" parent="Widget.MaterialComponents.Chip.Filter">

        <item name="chipBackgroundColor">@color/chip_bg_clr</item>
        <item name="textColor">@color/chip_txt_clr</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="rippleColor">@color/whitealpha</item>


    </style>

    <style name="AppThemee.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Circular">

        <item name="cornerSize">50%</item>

    </style>


    <style name="TextOnShadow" parent="">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>


    <style name="AppThemee" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="MySpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#000000</item>
    </style>


    <style name="FullWidthDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="TCustomProgesBr">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">LineScalePulseOutIndicator</item>
    </style>

    <style name="TCustomProgesBr.Large">
        <item name="minWidth">76dip</item>
        <item name="maxWidth">76dip</item>
        <item name="minHeight">76dip</item>
        <item name="maxHeight">76dip</item>
        <item name="indicatorName">LineScalePulseOutIndicator</item>
    </style>

    <style name="TCustomProgesBr.Small">
        <item name="minWidth">24dip</item>
        <item name="maxWidth">24dip</item>
        <item name="minHeight">24dip</item>
        <item name="maxHeight">24dip</item>
        <item name="indicatorName">LineScalePulseOutIndicator</item>
    </style>


    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TrackSelectionDialogThemeOverlay" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">false</item>


    </style>

    <style name="ClickableView">
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>
    <style name="TransparentSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>