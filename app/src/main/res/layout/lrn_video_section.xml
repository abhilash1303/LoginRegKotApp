<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_learn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="10dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp">


            <ImageView
                android:id="@+id/videoThumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:background="@drawable/box_design"
                android:scaleType="centerCrop"
                android:src="@drawable/blur_btm" />


            <LinearLayout
                android:id="@+id/linar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/videoThumbnail"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/videoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/nunito_regular"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLines="2"
                    android:padding="@dimen/dimen_5dp"
                    android:text="This is the title of our video"
                    android:textColor="@color/black_effective"
                    android:textSize="15sp" />

                <!--                <View-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="3dp"-->
                <!--                    android:layout_marginTop="5dp"-->
                <!--                    android:background="@color/grayy"/>-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/section_crss"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_orange"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="Add Section"
                        android:textColor="@color/white"
                        android:textSize="12sp"

                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/add_anouncmnt"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_blue"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:text="@string/add_announcement"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/add_ques"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_teal_om"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/add_question"
                        android:textColor="@color/AppBlue"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vids_crs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_blue"
                        android:padding="@dimen/_5sdp"
                        android:text="Add Video"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linar1"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:text=""
                android:visibility="gone" />

            <TextView
                android:id="@+id/idd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginStart="8dp"
                android:text=""
                android:visibility="gone" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>