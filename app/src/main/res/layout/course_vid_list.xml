<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_3sdp"
    android:id="@+id/rl_course_vid_play"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/vid_cntnt_number"
            android:layout_width="36dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#838385"
            android:textSize="24sp" />


        <RelativeLayout
            android:id="@+id/rel_tiltee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/imageView3"
            android:layout_toRightOf="@+id/vid_cntnt_number"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp">


            <TextView
                android:id="@+id/vid_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/poppins_regular"
                android:text="fdfbd"
                android:textColor="#0D1333"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/vid_cntnt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_below="@+id/vid_chapter"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="1"
                android:textColor="#0D1333"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/vid_cntnt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vid_cntnt_title"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#A0A5BD"
                android:textSize="@dimen/_12sdp" />


        </RelativeLayout>


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/play_button" />


    </RelativeLayout>


</RelativeLayout>