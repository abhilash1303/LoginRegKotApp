<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CreateBizChannel">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg1_demo"
        android:scrollbars="none">


        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_20dp">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppThemee.PopupOverlay"
                >


                <TextView
                    android:id="@+id/tool_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:letterSpacing="0.1"
                    android:text="Business Channel"
                    android:textColor="@color/black_effective"
                    android:textSize="18sp" />


                <ImageView
                    android:id="@+id/close_proff"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_close" />


            </androidx.appcompat.widget.Toolbar>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative1"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tx1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:letterSpacing="0.1"
                        android:text="Channel Name"
                        android:textColor="@color/black_effective"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/channell_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        android:background="@drawable/editstyle_new"
                        android:ems="10"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Enter Channel Name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="2"
                        android:padding="@dimen/dimen_10dp"
                        android:textColor="@color/black_effective"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:letterSpacing="0.1"
                        android:text="Business Name"
                        android:textColor="@color/black_effective"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/business_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        android:background="@drawable/editstyle_new"
                        android:ems="10"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Enter Business Name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="2"
                        android:padding="@dimen/dimen_10dp"
                        android:textColor="@color/black_effective"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:letterSpacing="0.1"
                        android:text="Select Company Type"
                        android:textColor="@color/black_effective"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/cmp_type_spinner"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:background="@drawable/editstyle_new"
                        android:spinnerMode="dropdown" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:letterSpacing="0.1"
                        android:text="Authorised Person Name"
                        android:textColor="@color/black_effective"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/auth_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        android:background="@drawable/editstyle_new"
                        android:ems="10"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Enter Authorised Person Name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="@dimen/dimen_10dp"
                        android:textColor="@color/black_effective"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:letterSpacing="0.1"
                        android:text="PAN Number"
                        android:textColor="@color/black_effective"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/bizch_pan"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        android:background="@drawable/editstyle_new"
                        android:ems="10"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Enter PAN Number"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="@dimen/dimen_10dp"
                        android:textColor="@color/black_effective"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:letterSpacing="0.1"
                        android:text="GST Number"
                        android:textColor="@color/black_effective"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/bizch_gst"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        android:background="@drawable/editstyle_new"
                        android:ems="10"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Enter GST Number"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="@dimen/dimen_10dp"
                        android:textColor="@color/black_effective"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:letterSpacing="0.1"
                        android:text="Official Email ID"
                        android:textColor="@color/black_effective"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/associte_email2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        android:background="@drawable/editstyle_new"
                        android:ems="10"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Enter email"
                        android:imeOptions="actionDone"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:padding="@dimen/dimen_10dp"
                        android:textColor="@color/black_effective"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/arae_of"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:letterSpacing="0.1"
                        android:text="Business Category"
                        android:textColor="@color/black_effective"
                        android:textStyle="bold" />


                    <Spinner
                        android:id="@+id/agenttype_spinner"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:background="@drawable/editstyle_new"
                        android:spinnerMode="dropdown" />


                    <TextView
                        android:id="@+id/servinggas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:letterSpacing="0.1"
                        android:text="Business Sub-Category"
                        android:textColor="@color/black_effective"
                        android:textStyle="bold" />


                    <Spinner
                        android:id="@+id/subcat_spinner"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:background="@drawable/editstyle_new"
                        android:spinnerMode="dropdown" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:letterSpacing="0.1"
                        android:text="Phone"
                        android:textColor="@color/black_effective"
                        android:textStyle="bold"
                        android:visibility="gone" />


                    <EditText
                        android:id="@+id/associte_phonee"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        android:background="@drawable/editstyle_new"
                        android:ems="10"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:hint="Enter Phone number"
                        android:maxLines="2"
                        android:padding="@dimen/dimen_10dp"
                        android:textColor="@color/black_effective"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:letterSpacing="0.1"
                    android:text="About Business"
                    android:textColor="@color/black_effective"
                    android:textStyle="bold" />



                <EditText
                    android:id="@+id/write_biz"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:background="@drawable/editstyle_new"
                    android:ems="10"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Write about your business"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="2"
                    android:padding="@dimen/dimen_10dp"
                    android:textColor="@color/black_effective"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:letterSpacing="0.1"
                    android:text="Address"
                    android:textColor="@color/black_effective"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/associte_fulladdrs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:background="@drawable/editstyle_new"
                    android:ems="10"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_vertical"
                    android:hint="Enter full address"
                    android:maxLines="2"
                    android:padding="@dimen/dimen_10dp"
                    android:textColor="@color/black_effective"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:letterSpacing="0.1"
                        android:text="Select State"
                        android:textColor="@color/black_effective"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/state_spinner"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:background="@drawable/editstyle_new"
                        android:spinnerMode="dropdown" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:letterSpacing="0.1"
                        android:text="Select City"
                        android:textColor="@color/black_effective"
                        android:textStyle="bold">

                    </TextView>

                    <Spinner
                        android:id="@+id/city_spinner"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:background="@drawable/editstyle_new"
                        android:spinnerMode="dropdown" />


                    <TextView
                        android:id="@+id/tx4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:letterSpacing="0.1"
                        android:text="Pincode"
                        android:textColor="@color/black_effective"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/enter_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        android:background="@drawable/editstyle_new"
                        android:ems="10"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Enter Pincode"
                        android:imeOptions="actionNext"
                        android:inputType="number|text"
                        android:padding="@dimen/dimen_10dp"
                        android:textColor="@color/black_effective"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                </LinearLayout>




                <CheckBox
                    android:id="@+id/terms_promo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:buttonTint="@color/AppBlue"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="start"
                    android:text="@string/subscription_agreement"
                    android:textColor="#000"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tx5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:text="Select Your Service"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="gone">

                </TextView>


                <TextView
                    android:id="@+id/profileSave"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/bg_orange"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:padding="@dimen/_5sdp"
                    android:shadowColor="@color/black"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </RelativeLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/Bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:indeterminateDrawable="@drawable/progress_icon">

        </ProgressBar>
    </RelativeLayout>

    <!--    </androidx.drawerlayout.widget.DrawerLayout>-->

</LinearLayout>