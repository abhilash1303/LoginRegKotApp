<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".activities.AsstCntPrfileActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">


        <TextView
            android:id="@+id/spurt_tooltxttx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/assct_profile"
            android:textColor="@color/colorBackground"
            android:textSize="18sp" />


    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:id="@+id/lin1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_design"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1.3"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/circleImageView"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/editstyle1" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="0.7"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableEnd="@drawable/tickmark"
                                    android:drawablePadding="5dp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text=""
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/quali"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text=""
                                    android:textSize="13sp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/agentty"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text=""
                                    android:textSize="13sp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/city"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text=""
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/state"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text=""
                                    android:textSize="13sp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/txpincode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text=""
                                    android:textSize="13sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal"
                                    android:weightSum="1">


                                    <TextView
                                        android:id="@+id/txtRatingValue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="0.5"
                                        android:fontFamily="@font/poppins_regular"
                                        android:text="4.1"
                                        android:textColor="#581212" />

                                    <RatingBar
                                        android:id="@+id/ratingBar"
                                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:rating="4.1"
                                        android:scaleX=".7"
                                        android:scaleY=".7"
                                        android:transformPivotX="1dp"
                                        android:transformPivotY="1dp" />


                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="400dp"
                            android:layout_height="@dimen/_60sdp"
                            android:visibility="visible"
                            android:layout_below="@+id/lin1"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/filter_box1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/filter_box1"
                                    android:orientation="horizontal"
                                    android:visibility="gone"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_regular"
                                            android:text="Views"
                                            android:textColor="#333"
                                            android:textSize="15sp" />

                                        <TextView
                                            android:id="@+id/views"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="5dp"
                                            android:paddingTop="10dp"
                                            android:text=""
                                            android:textColor="@color/colorAccent"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_regular"
                                            android:text="Profile Visits"
                                            android:textColor="#333"
                                            android:textSize="15sp" />

                                        <TextView
                                            android:id="@+id/profile_visits"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingTop="10dp"
                                            android:text=""
                                            android:textColor="@color/colorAccent"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />

                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="3">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical"
                                        android:visibility="invisible"
                                        android:orientation="vertical">

                                        <Button
                                            android:id="@+id/request_services"
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/_35sdp"
                                            android:layout_gravity="center_vertical|center_horizontal"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginRight="5dp"
                                            android:background="@drawable/etdesign"
                                            android:backgroundTint="@color/bg_screen3"
                                            android:text="Connect"
                                            android:visibility="visible"
                                            android:textAllCaps="false"
                                            android:textColor="#FFFFFF"
                                            android:textSize="15sp" />


                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical"
                                        android:orientation="vertical">


                                        <Button
                                            android:id="@+id/write_rvw"
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/_35sdp"
                                            android:layout_gravity="center_vertical|center_horizontal"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginRight="5dp"
                                            android:background="@drawable/etdesign"
                                            android:backgroundTint="@color/bg_screen3"
                                            android:paddingTop="2dp"
                                            android:paddingBottom="2dp"
                                            android:paddingLeft="8dp"
                                            android:paddingRight="8dp"
                                            android:text="Write Review"
                                            android:textAllCaps="false"
                                            android:textColor="#FFFFFF"
                                            android:textSize="12sp" />


                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical"
                                        android:orientation="vertical">

                                        <Button
                                            android:id="@+id/read_rvw"
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/_35sdp"
                                            android:layout_gravity="center_vertical|center_horizontal"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginRight="5dp"
                                            android:background="@drawable/etdesign"
                                            android:backgroundTint="@color/bg_screen3"
                                            android:padding="2dp"
                                            android:text="Reviews"
                                            android:textAllCaps="false"
                                            android:textColor="#FFFFFF"
                                            android:textSize="15sp" />


                                    </LinearLayout>


                                </LinearLayout>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingStart="@dimen/_10sdp"
                                android:text="About"
                                android:textColor="@color/button_green"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/edit_bg_shdow"
                                android:orientation="horizontal"
                                android:padding="@dimen/_10sdp">


                                <TextView
                                    android:id="@+id/txAboutme"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingStart="@dimen/_10sdp"
                                android:text="Business Desccription"
                                android:textColor="@color/button_green"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/edit_bg_shdow"
                                android:orientation="horizontal"
                                android:padding="@dimen/_10sdp">


                                <TextView
                                    android:id="@+id/txLanguage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>







                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingStart="@dimen/_10sdp"
                                android:text="Business Name"
                                android:textColor="@color/button_green"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/edit_bg_shdow"
                                android:orientation="horizontal"
                                android:padding="@dimen/_10sdp">


                                <TextView
                                    android:id="@+id/spltst_in"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingStart="@dimen/_10sdp"
                                android:text="Established"
                                android:textColor="@color/button_green"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/edit_bg_shdow"
                                android:orientation="horizontal"
                                android:padding="@dimen/_10sdp">


                                <TextView
                                    android:id="@+id/txExperience"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingStart="@dimen/_10sdp"
                                android:text="Company Type"
                                android:textColor="@color/button_green"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/edit_bg_shdow"
                                android:orientation="horizontal"
                                android:padding="@dimen/_10sdp">


                                <TextView
                                    android:id="@+id/txServiceProvided"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"
                            android:id="@+id/vid_ll"
                            android:visibility="gone"
                            android:paddingLeft="5dp">

                            <ImageView
                                android:id="@+id/videoView1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="20dp"
                                android:padding="2dp"
                                android:src="@drawable/play" />


                            <TextView
                                android:id="@+id/videoView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Play Video"
                                android:textColor="#fff"
                                android:textSize="15sp" />


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


        </ScrollView>

        <RelativeLayout
            android:id="@+id/blur_reg1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:background="#333"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/asso_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="iddd"
        android:textColor="#291717"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />


</RelativeLayout>

