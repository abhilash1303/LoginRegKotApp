<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/my_finance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:clipToPadding="true"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_teal"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/sprt_img"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginEnd="8dp"
                            android:padding="@dimen/_5sdp" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sprt_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="status: "
                    android:textColor="#444" />

                <TextView
                    android:id="@+id/user_ststuss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="@drawable/bg_teal"
                    android:padding="@dimen/_3sdp"
                    android:text="Approved"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/user_vieww"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="@drawable/bg_orange"
                    android:padding="@dimen/_3sdp"
                    android:text="View"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>


            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="#CCC4C4" />


            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/linsub1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/LeadType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Keywords"
                        android:textColor="#444" />

                    <TextView
                        android:id="@+id/user_keywords"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Fresh"
                        android:textColor="#1452B9" />


                    <TextView
                        android:id="@+id/LeadIDText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Type of Video"
                        android:textColor="#444" />

                    <TextView
                        android:id="@+id/user_vidtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text=""
                        android:textColor="#1452B9" />

                    <TextView
                        android:id="@+id/Product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:paddingRight="90dp"
                        android:text="Visible for"
                        android:textColor="#444" />

                    <TextView
                        android:id="@+id/user_visiblefor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:textColor="#1452B9" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linsub2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/LeadUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Select Video Category"
                        android:textColor="#444" />

                    <TextView
                        android:id="@+id/sel_vid_ctagry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1452B9" />


                    <TextView
                        android:id="@+id/LeadDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Category"
                        android:textColor="#444" />

                    <TextView
                        android:id="@+id/user_ctgry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#1452B9" />


                    <TextView
                        android:id="@+id/LeadlvlTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Sub-Category"
                        android:textColor="#444"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/user_subctgry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#1452B9"
                        android:visibility="visible" />


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Description"
                    android:textColor="#444"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/user_descrptn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text=""
                    android:textColor="#1452B9"
                    android:visibility="visible" />


            </LinearLayout>


            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/lin1"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="#B3A8A8">

            </View>

            <!--            <LinearLayout-->
            <!--                android:id="@+id/ln1"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="@dimen/dimen_40dp"-->
            <!--                android:gravity="center">-->

            <!--                <TextView-->
            <!--                    android:id="@+id/ProfileDetail"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:fontFamily="@font/poppins_regular"-->
            <!--                    android:gravity="center_horizontal"-->
            <!--                    android:text="Edit"-->
            <!--                    android:textColor="#444"-->
            <!--                    android:textSize="@dimen/dimen_15sp" />-->

            <!--            </LinearLayout>-->


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>